# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

# Docstrings and comments use max_line_length = 79
[*.py]
max_line_length = 119

# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab

[docs/**.txt]
max_line_length = 79

[version.txt]
insert_final_newline = false
